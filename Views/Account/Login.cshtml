@model JusonITELEC1C.ViewModels.LoginViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" asp-controller="Account" class="text-center">
    <div class="text-center">
        <h1 class="display-4">Login</h1> <br>
    </div>
    <div class="form-group">
        <label asp-for="UserName">Username</label>
        <input asp-for="UserName" placeholder="Enter Username">
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Enter Password">
    </div>
    <div class="form-group form-check">
        <input asp-for="RememberMe">
        <label asp-for="RememberMe"></label>
    </div>
    <br>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>